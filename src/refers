@media (max-width: 992px) {
    .footer-content {
        gap: 25px;
    }
    .footer-column.footer-about {
         flex-basis: 40%; /* Give about slightly less */
    }
    .footer-links-grid {
         flex-basis: 55%; /* Give links slightly more */
         grid-template-columns: repeat(auto-fit, minmax(140px, 1fr)); /* Adjust min width */
    }
}

@media (max-width: 768px) {
    .footer-content {
        flex-direction: column; /* Stack main columns */
        gap: 30px;
    }
    .footer-column.footer-about,
    .footer-links-grid {
        flex-basis: 100%; /* Full width when stacked */
    }
     .footer-links-grid {
        grid-template-columns: repeat(auto-fit, minmax(150px, 1fr)); /* Ensure decent width */
        gap: 20px 15px; /* Reduce gap */
    }
     .footer-links h4 {
         margin-bottom: 10px;
     }
      .footer-links ul {
          gap: 6px;
      }
}

@media (max-width: 480px) {
